<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1Convertor.BindingDemo"
             Title="BindingDemo">
    <VerticalStackLayout>
        <Entry Placeholder="Enter your Name" x:Name="txtName"></Entry>
        <Label 
            Text="{Binding Source={x:Reference txtName},Path=Text}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>